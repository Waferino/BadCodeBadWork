@model EventInfo
@{
    ViewData["Title"] = "Создание события";
}
<div class="panel-body">
  <form asp-controller="Functions" asp-action="CreateEvent" method="POST" >
          <fieldset>
            <legend class="row col-md-offset-1">Создание события</legend>
            <div class="form-group row">
              <label for="DateOfThe" class="col-md-2 control-label">Ожидаемая дата проведения:</label>
              <input type="datetime" class="form-control" name="DateOfThe" value=@Model.DateOfThe />
            </div>
            <div class="form-group row">
              <label for="Name" class="col-md-2 control-label">Название события:</label>
              <input type="text" class="form-control" name="Name" value=@Model.Name />
            </div>
            <div class="form-group row">
              <label for="Notation" class="col-md-2 control-label">Примачание к событию:</label>
              <input type="text" class="form-control" name="Notation" value=@Model.Notation />
            </div>
            <div class="form-group row">
              <label>&nbsp;</label>
              <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
          </fieldset>
  </form>
</div>