@model MessageToGroupModel
@{
    ViewData["Title"] = "Сообщение группе";
}
<div class="panel-body">
  <form asp-controller="Functions" asp-action="MessageToGroup" method="POST" >
          <fieldset>
            <legend class="row col-md-offset-1">Сообщение группе</legend>
            <div>
              <input type="hidden" asp-for="id_group" value=@Model.id_group />
            </div>
            <div class="form-group row">
              <label asp-for="message_subject" class="col-md-2 control-label">Тема сообщения:</label>
              <input class="form-control" asp-for="message_subject" value=@Model.message_subject />
            </div>
            <div class="form-group row">
              <label asp-for="message_body" class="col-md-2 control-label">Тело сообщения:</label>
              <textarea class="form-control" asp-for="message_body" rows="4" >@Model.message_body</textarea>
            </div>
            <div class="form-group row">
              <label>&nbsp;</label>
              <input type="submit" value="Отправить" class="btn btn-primary" />
            </div>
          </fieldset>
  </form>
</div>