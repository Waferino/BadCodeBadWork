@{
    ViewData["Title"] = "AddExtraEvent";
    int id_event = (int)ViewData["id_Event"];
}
<div class="panel-body">
    <form asp-controller="Functions" asp-action="AddExtraEvent" method="post" enctype="multipart/form-data">
        <fieldset>
            <legend class="row col-md-offset-1">Добавление файла-приложения</legend>
            <div class="form-group row">
                <input type="file" name="file" class="btn btn-primary btn-file" /> @*<!-- <span class="btn btn-default btn-file"> BROWSE <input/> </span> -->*@
            </div>
            <div>
              <input type="hidden" name="id_event" value=@id_event />
            </div>
            <div class="form-group row">
                <button type="submit" class="btn btn-primary" >Добавить</button>
            </div>
        </fieldset>
    </form>
</div>