@model LoginViewModel
@{
    ViewData["Title"] = "Вход";
}
<div class="panel-body">
    <form asp-controller="Account" asp-action="Login" method="POST" >
    <h3 class="row col-md-offset-1" >Вход для студентов/кураторов.</h3>
    <hr/>

    <div class="form-group row">
        <label asp-for="Login" class="col-md-2 control-label" >Логин: </label>
        <div class="col-md-10" >
            <input asp-for="Login" class="form-control" placeholder="Введите логин" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Identity" class="col-md-2 control-label" >Идентификатор: </label>
        <div class="col-md-10" >
            <input asp-for="Identity" class="form-control" placeholder="Введите № зачетки | пароль куратора" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-md-offset-2 col-md-10" >
            <button type="submit" class="btn btn-primary">Войти</button>
            <a asp-controller="Home" asp-action="Index" class="btn btn-default">Отменить</a>
        </div>
    </div>
    </form>    
</div>