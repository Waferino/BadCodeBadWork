@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}
<div class="panel-body">
    <form asp-controller="Account" asp-action="Register" method="POST" >
        <fieldset>
            <legend class="row col-md-offset-1">Регистрация</legend>
            <div class="form-group row">
                <label asp-for="Lastname" class="col-md-2 control-label">Фамилия: </label>
                <div class="col-md-10">
                    <input asp-for="Lastname" class="form-control" required value="@Model.Lastname" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Firstname" class="col-md-2 control-label">Имя: </label>
                <div class="col-md-10">
                    <input asp-for="Firstname" class="form-control" required value="@Model.Firstname" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Midlename" class="col-md-2 control-label">Отчество: </label>
                <div class="col-md-10">
                    <input asp-for="Midlename" class="form-control" required value="@Model.Midlename" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Number" class="col-md-2 control-label">Номер зачётки: </label>
                <div class="col-md-10">
                    <input asp-for="Number" class="form-control" value="@Model.Number" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-md-2 control-label">Адрес эл. почты: </label>
                <div class="col-md-10">
                    <input type="email" asp-for="Email" class="form-control" required value="@Model.Email" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Password" class="col-md-2 control-label">Введите пароль: </label>
                <div class="col-md-10">
                    <input type="password" asp-for="Password" class="form-control" required value="@Model.Password" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="rePassword" class="col-md-2 control-label">Повторите пароль: </label>
                <div class="col-md-10">
                    <input type="password" asp-for="rePassword" class="form-control" required value="@Model.rePassword" />
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="SpecialWord" class="col-md-2 control-label">Параметр: </label>
                <div class="col-md-10">
                    <input asp-for="SpecialWord" class="form-control" placeholder="@Model.SpecialWord" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-offset-2 col-md-10">
                    <button type="submit" class="btn btn-primary">Зарегистрироваться</button>
                    <a asp-controller="Home" asp-action="Index" class="btn btn-default">Отменить</a>
                </div>
            </div>
            </fieldset>
    </form>
</div>