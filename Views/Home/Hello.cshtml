@model Starikov.HelloFriend
@{
    ViewData["Title"] = "Hello";
}

<div class="container">
    <div class="panel panel-success">
        <div class="col-md-3">
            <h2 class="panel-heading text-center">Say Hello:</h2>
            <h3>@ViewData["Message"]</h3>
            <div class="panel-body">
                <form class="p-a-1" asp-action="Hello" method="POST">
                    <div asp-validation-summary="All"></div>
                    <div class="form-group">
                        <label asp-for="Message">Сообщение: </label>
                        <input class="form-control" asp-for="Message"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="TgName">Кому: </label>
                        <input class="form-control" asp-for="TgName"/>
                    </div>
                    <button class="btn btn-primary" type="submit">Передать</button>
                </form>
            </div>
        </div>
    </div>
</div>